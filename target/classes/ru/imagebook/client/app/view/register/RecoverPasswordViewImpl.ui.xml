<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <g:HTMLPanel styleName="main">
        <g:HTMLPanel styleName="form">
            <h1><span ui:field="serviceNameField"/></h1>
            <h2>Восстановление пароля</h2>
            <g:FormPanel ui:field="recoverFormPanel" method="POST">
                <g:HTMLPanel>
                    <table>
                        <tr>
                            <td>E-mail:</td>
                            <td><g:TextBox ui:field="emailField"/></td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <g:HTML ui:field="errorLabel" styleName="error"/>
                                <g:Button ui:field="recoverButton" text="Восстановить пароль" styleName="form-submit"/>
                            </td>
                        </tr>
                    </table>
                    <g:Label ui:field="infoLabel" visible="false" />
                </g:HTMLPanel>
            </g:FormPanel>
        </g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder>